@{
    Layout = null; // ou especifique seu _Layout se tiver um
    var nome = ViewBag.Nome as string;
    var jogadorId = Context.Session.GetInt32("JogadorId");
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/css/Style_principal.css")" />
</head>
<body>
    <header>
        <nav class="btn-2_conta">
            <div class="profile-dropdown">
                <div class="profile-dropdown-btn" onclick="toggleDropdown()">
                    <div class="profile-img">
                        <img src="@Url.Content("~/images/profile.png")" alt="Avatar" width="25" height="25" />
                    </div>
                    <span>
                        @nome
                        <i id="btn_seta" class="fa-solid fa-caret-down"></i>
                    </span>
                </div>

                <ul class="profile-dropdown-list" id="dropdownMenu">
                    <li class="profile-dropdown-list-item">
                        <a asp-controller="Jogador" asp-action="Detalhes" asp-route-id="@jogadorId">
                            <i class="bi bi-person-circle"></i> Editar Perfil
                        </a>
                    </li>

                    <li class="profile-dropdown-list-item">
                        <a asp-controller="Jogador" asp-action="Logout">
                            <i class="bi bi-box-arrow-in-left"></i> Sair
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- BOTÃO DE ACESSIBILIDADE -->
    <div class="accessibility-container">
        <button class="accessibility-btn" onclick="toggleAccessibilityMenu()">
            <i class="bi bi-person-wheelchair"></i>
        </button>
        <ul class="accessibility-menu" id="accessibilityMenu">
            <li><button onclick="increaseFont()">Aumentar Fonte</button></li>
            <li><button onclick="decreaseFont()">Diminuir Fonte</button></li>
            <li><button onclick="toggleContrast()">Contraste Alto</button></li>
            <li><button onclick="toggleFocusMode()">Modo Foco</button></li>
        </ul>
    </div>

    <!-- MENU LATERAL -->
    <input type="checkbox" class="openSidebarMenu" id="openSidebarMenu" />
    <label for="openSidebarMenu" class="sidebarIconToggle">
        <div class="spinner diagonal part-1"></div>
        <div class="spinner horizontal"></div>
        <div class="spinner diagonal part-2"></div>
    </label>

    <div id="sidebarMenu">
        <ul class="sidebarMenuInner">
            <li><a asp-controller="Quiz" asp-action="Listar_Quiz">Home</a></li>
            <li><a asp-controller="Quiz" asp-action="Listar_Quiz">Quizzes</a></li>
            <li><a asp-controller="Quiz" asp-action="Criar">Criação</a></li>
        </ul>
    </div>
    <script src="~/js/menu_dropdown.js" asp-append-version="true"></script>
    <script src="~/js/tema.js" asp-append-version="true"></script>
</body>
</html>
