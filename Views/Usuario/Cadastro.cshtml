@model EliminIQ_TCC.Models.Usuario
@{
    ViewData["Title"] = "Cadastro de Jogador";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EliminIQ</title>
    <!-- Boxicons -->
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <!-- CSS personalizado -->
    <link rel="stylesheet" href="@Url.Content("~/css/Style_cadastro.css")" />
</head>
<body>
    <div class="container">
        <div class="image-side">
            <img src="@Url.Content("~/images/undraw_gaming_v7a6.svg")" alt="Imagem decorativa" />
        </div>

        <div class="form-side">
            <h2>Cadastre-se</h2>
            <form asp-action="Cadastro" method="post" id="formCadastro">
                <!-- Campo oculto para o Id gerado pelo EF -->
                <input asp-for="Id_Usuario" type="hidden" />

                <div class="input-field">
                    <i class='bx bxs-user'></i>
                    <input asp-for="Nome_Usuario" placeholder="Nome" required />
                    <span asp-validation-for="Nome_Usuario" class="text-danger"></span>
                </div>

                <div class="input-field">
                    <i class='bx bxs-envelope'></i>
                    <input asp-for="Email_Usuario" placeholder="Email" required />
                    <span asp-validation-for="Email_Usuario" class="text-danger"></span>
                </div>

                <div class="input-field">
                    <i class='bx bxs-lock-alt'></i>
                    <input asp-for="Senha_Usuario" type="password" placeholder="Senha" required />
                    <span asp-validation-for="Senha_Usuario" class="text-danger"></span>
                </div>

                <button type="submit" class="btn solid">Cadastrar</button>
            </form>
            <p style="margin-top: 10px;">
                Já tem Conta? <a asp-controller="Usuario" asp-action="Login">Faça o Login</a>
            </p>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
